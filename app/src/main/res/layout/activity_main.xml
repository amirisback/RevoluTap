<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/frogo_dimen_24dp">

        <ImageView
            android:id="@+id/gameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/mode_step_down" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameMode"
            android:src="@drawable/revolutap_banner" />

        <TextView
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/difficulty_header"
            android:textSize="@dimen/frogo_dimen_font_24sp" />

        <TextView
            android:id="@+id/autoPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/difficulty"
            android:text="@string/Menu_auto"
            android:textSize="@dimen/frogo_dimen_font_24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Menu_start"
                android:textSize="@dimen/frogo_dimen_font_32sp" />

            <TextView
                android:id="@+id/select_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Menu_select_song"
                android:textSize="@dimen/frogo_dimen_font_32sp" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Menu_settings"
                android:textSize="@dimen/frogo_dimen_font_32sp" />

            <TextView
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Menu_download_songs"
                android:textSize="@dimen/frogo_dimen_font_32sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>